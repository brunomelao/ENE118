#:kivy 1.11.1
<MyWidget>:
    orientation: 'vertical'

    Label:
        
        size_hint: 1, 0.1
        id:lb
        text: '0'
        halign: 'right'

    GridLayout:
        id: gla
        size_hint: 1, 0.7
        cols: 4
        rows: 4
        Button:
            id: btsete
            text: '7'
            on_press: root.sete()
        Button:
            id: btoito
            text: '8'
            on_press: root.oito()
        Button:
            id: btnove
            text: '9'
            on_press: root.nove()        
        Button:
            id: btmais
            text: '+'
            on_press: root.soma()
        Button:
            id: btquatro
            text: '4'
            on_press: root.quatro()
        Button:
            id: btcinco
            text: '5'
            on_press: root.cinco()
        Button:
            id: btseis
            text: '6'
            on_press: root.seis()
        Button:
            id: btmenos
            text: '-'
            on_press: root.subtracao()
        Button:
            id: btum
            text: '1'
            on_press: root.um()
        Button:
            id: btdois
            text: '2'
            on_press: root.dois()
        Button:
            id: bttres
            text: '3'
            on_press: root.tres()
        Button:
            id: btmult
            text: '*'
            on_press: root.multiplicacao()
        
        Button:
            id: btc
            text: 'C'
            on_press: root.c()
        Button:
            id: btzero
            text: '0'
            on_press: root.zero()
        Button:
            id: btdel
            text: 'DEL'
            on_press: root.deletar()
        Button:
            id: btdiv
            text: '/'
            on_press: root.divisao()
    BoxLayout:
        size_hint: 1, 0.2
        orientation: 'horizontal'
        id: bxb
        Button:
            size_hint: 0.75, 1
            id:btigual
            text: '='
            on_press: root.igual()
        Button:
            size_hint: 0.25, 1
            id:btponto
            text: '.'
            on_press: root.ponto()
    
